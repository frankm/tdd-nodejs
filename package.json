{
  "name": "express-ws",
  "version": "1.0.0",
  "description": "tdd with express",
  "main": "app.js",
  "scripts": {
    "start": "NODE_ENV=development node index",
    "test": "NODE_ENV=test jest --watch",
    "posttest": "NODE_ENV=test node test-cleanup",
    "lint": "eslint .",
    "test:staging":  "NODE_ENV=staging jest -f .  --runInBand",
    "migrate:test": "NODE_ENV=staging sequelize-cli db:migrate",
    "pretest:staging": "npm run migrate:test",
    "posttest:staging": "NODE_ENV=staging node test-cleanup"

  },
  "author": "Frank M",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "dotenv": "^16.0.0",
    "env-var": "^7.1.1",
    "express": "^4.17.2",
    "express-validator": "^6.14.0",
    "file-type": "^16.5.3",
    "i18next": "^21.6.10",
    "i18next-fs-backend": "^1.1.4",
    "i18next-http-middleware": "^3.1.6",
    "nodemailer": "^6.7.2",
    "sequelize": "^6.15.0",
    "sequelize-cli": "^6.4.1",
    "sqlite3": "github:mapbox/node-sqlite3"
  },
  "devDependencies": {
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.7",
    "jest-watch-typeahead": "^1.0.0",
    "prettier": "^2.5.1",
    "smtp-server": "^3.9.0",
    "supertest": "^6.2.2"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2021
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "es2021": true,
      "node": true,
      "jest": true
    },
    "rules": {
      "eqeqeq": "warn",
      "prettier/prettier": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  },
  "jest": {
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  }
}
